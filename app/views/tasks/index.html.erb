<div class="text-xl my-10">My tasks</div>

<div class="flex flex-col space-y-4">
  <% @tasks.each do |task| %>
  <div class="flex flex-wrap">
    <div class="flex-none w-14 flex items-center">
      <input type="checkbox" class="checkbox checkbox-success" />
    </div>

    <div class="flex-auto w-64">
      <div class="font-bold"><%= task.title %></div>
      <div class="text-sm opacity-50"><%= task.subtitle %></div>
    </div>

    <div class="flex-auto w-18">
      <div class=" badge <%= priority_classname(task.priority) %>"><%= task.priority.titleize %></div>
    </div>

    <div class="flex-auto">
      <div class="badge badge-ghost"><%= formatted_time(task.due_at) %></div>
    </div>
  </div>
  <% end %>
</div>